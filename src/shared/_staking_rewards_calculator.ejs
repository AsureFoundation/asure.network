<section class="blc-news bg-white" id="about">
    <div class="head">
        <h1 class="title hr">Staking Rewards Calculator</h1>
    </div>
    <form novalidate="novalidate" id="form">
        <div class="container staking-calculator">
        <div class="row">
            <div class="col-md-12 content-block">
                <h2 class="title"></h2>
                <p></p>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label for="disabledTextInput">Tokens you're staking</label>
                    <input type="number" value="0" id="ownTokensStaking" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                    <label for="disabledTextInput">Tokens staked</label>
                    <input type="number" value="0" id="totalTokensStaked" class="form-control" placeholder="">
                </div>

                <div class="form-group">
                    <label for="disabledTextInput">Daily transaction volume</label>
                    <input type="number" value="0" id="dalilyTransactionVolume" class="form-control" placeholder="">
                </div>

                <div class="form-group">
                    <label for="disabledTextInput">Average transaction size</label>
                    <input type="number" value="0" id="avgTransactionSize" class="form-control" placeholder="" >
                </div>

                <div class="form-group disabled">
                    <label for="disabledTextInput">Average transactions per day</label>
                    <input type="number" value="0" id="avgTransactionDay" class="form-control" placeholder="Disabled input" disabled="disabled">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="disabledTextInput">Base flat fee</label>
                    <input type="number" value="0" id="baseFlatFee" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                    <label for="disabledTextInput">Percentage fee</label>
                    <input type="number" value="0" id="percentageFee" class="form-control" placeholder="">
                </div>
                <div class="form-group disabled">
                    <label for="disabledTextInput">Average fees paid per day</label>
                    <input type="number" value="0" id="avgFeesPaidDay" class="form-control" placeholder="Average fees paid per day" disabled="disabled">
                </div>

            </div>
            <div class="col-md-4">
                <h3>Expected rewards</h3>
                <br/>
                <h3 id="perDay"></h3> <br/>
                <h3 id="perMonth"></h3> <br/>
                <h3 id="perYear"></h3> <br/>
            </div>
            <div class="col-md-12 content-block">
                <input  type="button" value="RESET VALUES" name="subscribe" class="btn btn-primary mb-2" onclick="resetValues()">
            </div>
        </div>
    </div>
    </form>
</section>
